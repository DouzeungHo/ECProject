doctype html
html
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible' content='IE=edge')
      meta(content='width=device-width, initial-scale=1')
      title #{title}
      link(rel='stylesheet', href='//cdn.muicss.com/mui-0.9.41/css/mui.min.css' type='text/css')
      link(rel='stylesheet', href='/stylesheets/style.css' type='text/css')
      script(src="//code.jquery.com/jquery-2.1.4.min.js")
      script(src='/javascripts/indexToolbar.js')
      script(src='//cdn.muicss.com/mui-0.9.41/js/mui.min.js')
  body
    include navigate.pug
              

    header#header.mui--z1
      div.mui-appbar.mui--appbar-height
        table(width='100%')
          tr
            td
              div.mui-container-fluid
                a.sidedrawer-toggle.mui--visible-xs-inline-block.mui--visible-sm-inline-block.js-show-sidedrawer ☰
                a.sidedrawer-toggle.mui--hidden-xs.mui--hidden-sm.js-hide-sidedrawer ☰
                  a.mui--text-title(href='/')
                    button.mui-btn.mui-btn--primary 拼团游
            td(align='right')
              include none-user-bar.pug

    div#content-wrapper
      div.mui--appbar-height
      div#strange.mui-container-fluid
        block content

    footer#footer
      div.mui-container.mui--text-center
        br
        p Made with <a href="https://www.muicss.com")> MUICSS </a>